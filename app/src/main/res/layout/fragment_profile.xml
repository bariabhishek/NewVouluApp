<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/profile_full_background"
    android:fitsSystemWindows="true"
    tools:context=".fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_20sdp"
                 android:background="@drawable/background_rounded"
                android:padding="5dp"
                android:id="@+id/myEditImage"
              />




            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileUpload"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:alpha="2"
                app:civ_border_color="#C5C4C4"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                app:civ_border_width="2dp"
                android:src="@drawable/sch"/>

            <TextView
                android:layout_below="@id/profileUpload"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abhishek"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp"
                android:layout_gravity="center"
                android:textStyle="bold"
                />


        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView

                android:layout_below="@id/name"
                android:layout_centerHorizontal="true"
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="city"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_phone_android_black_24dp"/>

                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="+912345678909"/>


                <ImageView
                    android:id="@+id/verifieduser"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_margin="@dimen/_18sdp"
                    android:src="@drawable/check"/>

            </LinearLayout>


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="1dp"
                android:layout_marginVertical="@dimen/padding_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile_details_baclgroud"
                    android:weightSum="3"
                    android:orientation="horizontal">




                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="You Accept"
                            android:textStyle="bold"
                            android:textSize="@dimen/_10ssp"/>
                        <TextView
                            android:id="@+id/youaccept"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#E7E6E6"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Posts"
                            android:textStyle="bold"
                            android:textSize="@dimen/_10ssp"/>
                        <TextView
                            android:id="@+id/numPost"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#E7E6E6"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Accept"
                            android:textStyle="bold"
                            android:textSize="@dimen/_10ssp"/>
                        <TextView
                            android:id="@+id/youraccept"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/large_text"
                android:textSize="@dimen/_10ssp"
                android:id="@+id/bioTv"
                android:layout_margin="@dimen/_15sdp"/>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="1dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile_details_baclgroud"
                    android:weightSum="3"
                    android:orientation="horizontal">




                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age"
                            android:textStyle="bold"
                            android:textSize="@dimen/_10ssp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18+"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#E7E6E6"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DOB"
                            android:textStyle="bold"
                            android:textSize="@dimen/_10ssp"/>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="27/8/1996"
                            android:id="@+id/dobTv"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#E7E6E6"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sex"
                            android:textStyle="bold"
                            android:textSize="@dimen/_10ssp"/>
                        <TextView
                            android:id="@+id/sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/profile_full_background"
                android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qualification"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:gravity="center"
                />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="yha qualificationdikhegi"
                    android:textSize="@dimen/_10ssp"
                    android:id="@+id/qualiTv"
                    android:layout_margin="@dimen/_7sdp"
                    android:gravity="center"
                    />

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/padding_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:tint="@color/colorPrimary"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_mail_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/email"
                        android:layout_gravity="center"
                        android:text="abc.xyz"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                <!--    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginHorizontal="10dp"
                        android:tint="@color/colorPrimary"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_cloud_done_black_24dp"/>
                    <TextView
                        android:id="@+id/numberOfJob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:text="45 job done"/>-->

                </LinearLayout>
            </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_23sdp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">
            <Button
               android:visibility="gone"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:background="@drawable/bg_capsule_for_message"
                android:text="Edit Profile"
                android:textColor="@color/colorPrimary"
                />
    <Button
        android:visibility="gone"
        android:id="@+id/logot"
        android:paddingHorizontal="@dimen/_15sdp"
        android:layout_marginRight="30dp"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30sdp"
        android:background="@drawable/background_btn_wrong"
        android:text="Logout"
        android:textColor="#ff00"
         />
</LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>